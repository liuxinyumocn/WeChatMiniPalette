<view class='main'>
    <canvas canvas-id='mcanvas' disable-scroll='true' id='mcanvas' bindtouchstart='mmove' bindtouchmove='mmove'></canvas>
</view>
<view class='slider'>
    <canvas canvas-id='scanvas' disable-scroll='true' id='scanvas' bindtouchstart='smove' bindtouchend='smove'></canvas>
</view>

<view class='container'>
    <view class='button'>确定</view>
    <view class='block' style='background-color: {{currentColor}}'></view>
    <view class='tip'>
        R:{{r}} G:{{g}}  B:{{b}}  A:{{a}}
    </view>
    <input type='text' class='F' value='{{f}}'></input>
    <view class='item'>
        <slider block-size='20' min='0' max='255' value='{{r}}' activeColor='#F00' ></slider>
        <slider block-size='20' min='0' max='255' value='{{g}}' activeColor='#0F0' ></slider>
        <slider block-size='20' min='0' max='255' value='{{b}}' activeColor='#00F' ></slider>
        <slider block-size='20' min='0' max='1' step='0.01' value='{{a}}' activeColor='#e9e9e9' ></slider>
    </view>
    <view class='box'>
        <view class='coloritem'></view>
        <view class='coloritem'></view>
        <view class='coloritem'></view>
        <view class='coloritem'></view>
        <view class='coloritem'></view>
        <view class='coloritem'></view>
        <view class='coloritem'></view>
        <view class='coloritem'></view>
        <view class='coloritem'></view>
        <view class='coloritem'></view>
    </view>
</view>
